<templateSet group="user">
  <template name="fff" value="echo &quot;&lt;pre&gt;&quot;;&#10;print_r($$$var$);&#10;exit;" description="print_r" toReformat="true" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="vvv" value="echo &quot;&lt;pre&gt;&quot;;&#10;var_dump($var$);&#10;exit;" description="var_dump" toReformat="true" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="ra" value="$request-&gt;all(&quot;$var$&quot;);" description="request all" toReformat="true" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="cmet" value="public function $funcName$(Request $request)&#10;{&#10;    $END$;&#10;}" description="" toReformat="true" toShortenFQNames="true">
    <variable name="funcName" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Class Member" value="true" />
    </context>
  </template>
  <template name="lll" value="PHP_EOL" description="" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="ri" value="$request-&gt;input('$var$', $default$);" description="request input" toReformat="true" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="default" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="rp" value="$page = intval($request-&gt;input('page', 1));&#10;$pageSize = intval($request-&gt;input('page_size', AppConst::PAGE_SIZE));" description="request get page info" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="rii" value="intval($request-&gt;input('$param$', $default$));" description="get the intval of request" toReformat="false" toShortenFQNames="true">
    <variable name="param" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="default" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="rik" value="$keyword      = $request-&gt;input('keyword', '');" description="request" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="pel" value="PHP_EOL" description="" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="ns" value="$${NAMESPACE}" description="" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>